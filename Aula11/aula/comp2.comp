#version 460

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

uniform sampler2D texUnit;
uniform writeonly image2D imageUnit;

void main() {

    ivec2 loc = ivec2(gl_GlobalInvocationID);
    vec4 pixel = texelFetch(texUnit, loc, 0);

    imageStore(imageUnit, loc, pixel);
    // pixel = imageLoad(imageUnit, loc); // ler da textura
}